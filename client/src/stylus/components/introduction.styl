.c-introduction
	background						$blue--dark
	color							$silver

	&__image
		relative()
		border 						0.75rem solid rgba($blue--medium, 0.2)
		height						8rem
		margin-right				0.5rem
		margin-top					0.75rem
		width						8rem

	&__contact-list
		inline-list()
		unstyled-list()

	&__header
		color						$yellow
		font-size					4rem
		letter-spacing				-1px
		line-height 				1

		.subheader
			color					$silver