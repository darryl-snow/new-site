.c-client-login
	fixed()

	&:before
		fixed()

	&__button
		fixed()
		background							transparent
		border								1px solid rgba($white, 0.5)
		// border-radius						999px
		color								rgba($white, 0.5)
		font-size							0.5rem
		// height								100%
		// opacity								1
		// transition							opacity 0.1s 0.5s, color 0.15s ease-in-out, background-color 0.15s ease-in-out
		// width								100%

		+ActiveFocusHover()
			background						$yellow
			color							$blue--navy
			outline							none

	&__dialog
		fixed()
		background							$yellow
		color								$blue--navy

	&.is-open

		.c-client-login

			&__button
				background					$yellow

	&__form
		pointer-events						auto

		&__label
			color							$blue--cerulean

		&__input
			background						transparent
			border							2px solid rgba($blue--navy, 0.25)
			color							$blue--navy

			&:focus
				background					rgba($white, 0.5)
				border						2px solid rgba($blue--navy, 0.45)

		&__button
			background						$blue--navy
			border							none
			color							$white

			+ActiveFocusHover()
				background					lighten($blue--navy, 15%)

			&.is-disabled

				+ActiveFocusHover()
					background				$blue--navy

		.o-form__check
			absolute()
			font-size						0.75rem
			opacity							0
			right							2rem
			top								0

		.o-form__error
			display							none

		&__group

			&.is-complete

				.o-form__check
					opacity					1
					right					0

				.c-client-login__form

					&__label
						color				$silver
						text-decoration		line-through

					&__input
						border				none
						border-bottom		1px solid $blue--navy
						border-radius		0

	&.is-error

		.c-client-login__dialog
			animation-duration				0.3s
			animation-fill-mode				both
			animation-iteration-count		2
			animation-name					shake

		.c-client-login__form

			.o-form__check
				opacity						0
				right						2rem

			&__label
				color						$red

			&__input
				border						2px solid $red

	&.is-logging-in

		.c-client-login__form
			opacity							0.15
			pointer-events					none

		.o-form__notification
			display							block


@keyframes shake
	0%, 50%, 100%
		transform		translateX(0)

	25%
		transform		translateX(-10px)

	75%
		transform		translateX(-10px)