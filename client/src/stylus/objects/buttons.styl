// @name Button
// @description Standard button.
// @state :hover - highlights when hovered
// @state :disabled - dims the button when disabled.
// @markup
// <button class="o-button">click me</button>
.o-button
	relative()
	border						2px solid $white
	border-radius				0.3rem
	color						$body-text-colour
	cursor						pointer
	display						inline-block
	font-family					$body-font
	font-size					0.65rem
	font-weight					600
	padding						0.3 * $base-spacing-unit 1.875em
	text-align					center
	text-decoration				none
	text-shadow					none
	text-transform				uppercase
	transition					$fast-transition

	+bp($screen-lg-min)
		padding					0.3 * $base-spacing-unit 2.5em

	&:disabled,
	&[disabled],
	&.is-disabled
		cursor					not-allowed
		opacity					0.5

	&--block
		display					block
		width					100%

	&--icon
		background				none
		border					none
		font-size				1.5rem
		height					1.5rem
		line-height				1.5rem
		opacity					0.5
		padding					0
		text-align				center
		transition				$fast-transition
		width					1.5rem
		
		+ActiveFocusHover()
			opacity				1