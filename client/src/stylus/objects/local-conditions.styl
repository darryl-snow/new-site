.o-local-conditions
	color						$body-text-colour
	text-align 					center

	&__location
		font-size				1.5rem

	&__time
		color					$grey--dark-2
		font-size				2rem
		font-weight				100
		margin					0.5 * $base-spacing-unit 0

		&__colon
			animation			blink 1s steps(1, end) 0s infinite
			margin				0 1px

	&__map
		relative()
		margin					0 auto
		overflow				hidden
		width					10rem

		// Map location marker - adjust left and top values
		&:after
		&:before
			absolute()
			background			$grey--dark-2
			border-radius		50%
			content				""
			display				block
			height				0.25rem
			left				54%
			opacity				0
			overflow			hidden
			top					50%
			transition			0.3s all ease-in 2s
			width				0.25rem
			z-index				getZIndex("mapMarker")

		&:before
			animation			scaleOut 1.0s infinite ease-in-out
			animation-delay		2s
			height				0
			width				0

		&__image
			fill				$body-text-colour
			transform			scale(1) translateY(0)
			transition			2s all $ease-in-quart
			width				100%

		&.is-zoomed

			.o-local-conditions__map__image
				transform		scale(3) translateY(-2.5rem)

			&:after
			&:before
				opacity			1

			&:before
				height			0.25rem
				width			0.25rem

	&__weather
		row()
		color					$grey--dark-2
		align-items				center
		height					auto
		margin-top				0.5 * $base-spacing-unit
		opacity 				1
		transition 				0.15s opacity ease-in-out

		&.is-hidden
			height				0
			opacity 			0

		&__condition
			col(6)
			height 3em
			padding-right		0.25rem
			text-align			right

		&__temperature
			col(6)
			font-size			2rem
			font-weight			100
			height				3rem
			line-height			3rem
			padding-left		0.25rem
			text-align			left

			&__symbol
				font-size		0.3em

	&--light
		color					$white

		.o-local-conditions

			&__time
				color			$blue--sky

			&__map

				&:after
				&:before
					background	$white

				&__image
					fill		$blue--cerulean

			&__weather
				color			$blue--sky

@keyframes blink
	from
		opacity					1
	50%
		opacity					0
	to
		opacity					1

@keyframes scaleOut
	0%
		transform				scale(0)
	100%
		opacity					0
		transform				scale(6.0)