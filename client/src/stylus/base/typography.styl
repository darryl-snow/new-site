$min-width		=			400
$max-width		=			800
$min-width-px	=			unit($min-width, px)
$max-width-px	=			unit($max-width, px)
$min-font		=			16
$max-font		=			22
$min-font-px	=			unit($min-font, px)
$max-font-px	=			unit($max-font, px)

:root
	font-size   			unit($min-font, "px")

@media (min-width: $min-width-px) and (max-width: $max-width-px)

	:root
		font-size			"calc(%s + (%s - %s) * ((100vw - %s) / (%s - %s)))" % (($min-font-px) ($max-font) ($min-font) ($min-width-px) ($max-width) ($min-width))

@media (min-width: $max-width-px)

	:root
		font-size			unit($max-font, "px")

// Base styles

html,
body
	color					$body-text-colour
	font-family				$body-font-backup
	font-kerning			auto
	font-smooth				always
	font-weight				300
	letter-spacing			0.5px
	text-rendering			optimizeLegibility
	-webkit-font-smoothing	subpixel-antialiased

	&.wf-active
		font-family 		$body-font

.o-inline-link
	font-weight				500
	text-decoration			none
	white-space				nowrap

	&:before,
	&:after
		box-sizing					content-box
		content						""
		height						100%
		left						-4px
		padding						0 4px
		position					absolute
		top							0
		width						100%
		z-index						-1

	&:before
		background-color			$yellow
		transform					rotateX(90deg)
		transform-origin			50% 100%
		transition					transform 0.2s
		transition-timing-function	cubic-bezier(0.7,0,0.3,1)

	&:after
		border-bottom				1px solid $yellow

	+ActiveFocusHover()
		color						darken($blue, 20%)

		&:before
			transform				rotateX(0deg)

p
	line-height				1.365

h1,
h2,
h3,
h4,
h5,
h6
	// color					$headings-colour
	font-family				$headings-font
	font-weight				100
	margin					0

// Helper classes

.caps
	text-transform			uppercase

.centred
	text-align				center

.left-aligned
	text-align				left

.right-aligned
	text-align				right

.small
	font-size				0.85em

.subheader
	font-size				0.4em
	font-weight				300
	margin					0.05em 0