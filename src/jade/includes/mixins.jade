mixin contact-list-item(item)

	li.c-introduction__contact-list__item
		a.c-introduction__contact-list__item__link(href="#{item.href}", title="#{item.title}")
			span.c-introduction__contact-list__item__text!= item.text
			+icon(item.icon)

mixin icon(name)

	svg.o-icon(class="o-icon--#{name}", viewBox="0 0 32 32")
		use(xlink:href="#icon--#{name}")

mixin section-end

	svg.o-section__top(xmlns="http://www.w3.org/2000/svg", version="1.1", width="100%", height="100", viewBox="0 0 100 100", preserveAspectRatio="none", role="separator")
		path(d="M100,100V0C80.029,100,50.075,100,0.149,0H0v100H100z")