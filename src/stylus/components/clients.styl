$module-colour = $blue

.c-clients
	background						$module-colour

	&__header
		color						$white

	&__list
		unstyled-list()
		width						100%

		&__item
			relative()
			border-bottom			1px dotted $blue--cerulean
			border-right			1px dotted $blue--cerulean
			display					inline-block
			height					8rem
			margin-left				-5px
			margin-top				-4px
			width					50%

			&:nth-of-type(n+5)
				border-bottom		none

			&:nth-of-type(2n)
				border-right		none
			
			+bp($screen-sm-min)
				width				33.3%

				&:nth-of-type(n+5)
					border-bottom	1px dotted $blue--cerulean

				&:nth-of-type(2n)
					border-right	1px dotted $blue--cerulean

				&:nth-of-type(n+4)
					border-bottom	none

				&:nth-of-type(3n)
					border-right	none

			&__logo
				vertical-centre()
				display				block
				fill				$white
				height				auto
				margin				0 auto
				max-width			80%
				opacity				0.75
				transition			$slow-transition
				width				0
				
				&.is-shown
					width			8rem