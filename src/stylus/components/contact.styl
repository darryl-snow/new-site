$module-colour = $blue--navy

.c-contact
	row()
	background							$module-colour
	color								$white

	&__form
		col(12)
		relative()
		font-size						0.65rem
		padding-bottom					1rem

		+bp($screen-sm-min)
			col(7)
			padding-bottom				0
			padding-right				1rem

		&__form

			&.is-sending,
			&.is-sent
				opacity					0.25

				.c-contact__form__button
					opacity				0
					pointer-events		none

				~ .o-form__notification
					display				block

		.o-form__check
			absolute()
			opacity						0
			right						2rem
			top							0

		&__error
			absolute()
			opacity						0
			right						0
			top							0
			transition					$fast-transition

		&__label
			color						$silver
			transition					$fast-transition

			&__note
				display					inline-block
				font-size				0.75em
				margin-left				0.5rem
				opacity					0.5

		&__input
			background					darken($module-colour, 20%)
			border						1px solid lighten($blue--dark, 20%)
			color						$white
			font-size					0.75rem
			padding-right				3rem
			transition					$fast-transition

			&::-moz-placeholder
				color					rgba($silver, 0.5)

			&::-ms-input-placeholder
				color					rgba($silver, 0.5)

			&::-webkit-input-placeholder
				color					rgba($silver, 0.5)

			&:focus
				background				darken($module-colour, 40%)
				border					1px solid lighten($blue--dark, 30%)

			&--textarea
				height					6rem

		&__group

			&.is-complete

				.o-form__check
					opacity				1
					right				0

				.c-contact__form

					&__label
						opacity			0.25
						text-decoration	line-through

					&__input
						background		$module-colour
						border			1px solid $module-colour
						border-bottom	1px solid lighten($blue--dark, 30%)

						&::-moz-placeholder
							color		$module-colour

						&::-ms-input-placeholder
							color		$module-colour

						&::-webkit-input-placeholder
							color		$module-colour

						// &--textarea
						// 	border		1px solid lighten($blue--dark, 30%)
							
			&.is-error
				
				.c-contact__form
					
					&__label
						color			$red

					&__input
						border			1px solid $red

					&__error
						opacity			1

			&.is-in-focus

				.c-contact__form

					&__label
						color			$white

					&__input
						background		darken($module-colour, 40%)
						border			1px solid lighten($blue--dark, 30%)
						outline			none

		&__button
			background					lighten($module-colour, 2.5%)
			border						2px solid $blue--cerulean
			color						$white
			margin						0 auto

			+ActiveFocusHover()
				background				$blue--cerulean
				outline					none

			&:disabled
			&[disabled]
			&.is-disabled
				background				transparent
				border					2px solid $silver
				color					$silver
				opacity					0.5

				+ActiveFocusHover
					background			transparent

		.o-form__notification

			.subheading
				color $blue--sky
				display					block

	&__info
		col(12)
		border-top						1px dashed lighten($blue--dark, 30%)
		padding-top						1rem

		+bp($screen-sm-min)
			col(5)
			border-left					1px dashed lighten($blue--dark, 30%)
			border-top					none
			padding-left				1rem
			padding-top					0

		&__city
			font-size					1.5rem

			&__time
				color					$blue--sky
				font-size				2rem
				font-weight				100
				margin					0.5 * $base-spacing-unit 0

				&__colon
					animation			blink 1s steps(1, end) 0s infinite
					margin				0 1px

			&__map
				relative()
				margin					0 auto
				overflow				hidden
				width					10rem

				&:after
				&:before
					absolute()
					background			$white
					border-radius		50%
					content				""
					display				block
					height				0.25rem
					left				54%
					opacity				0
					overflow			hidden
					top					50%
					transition			0.3s all ease-in 2s
					width				0.25rem
					z-index				2

				&:before
					animation			scaleOut 1.0s infinite ease-in-out
					animation-delay		2s
					height				0
					width				0

				&__image
					fill				$blue--cerulean
					transform			scale(1) translateY(0)
					transition			2s all $ease-in-quart
					width				100%

				&.is-zoomed

					.c-contact__info__city__map__image
						transform		scale(3) translateY(-2.5rem)

					&:after
					&:before
						opacity			1

					&:before
						height			0.25rem
						width			0.25rem

			&__weather
				row()
				color					$blue--sky
				align-items				center
				margin-top				0.5 * $base-spacing-unit

				&__icon
					col(6)
					height 3em
					padding-right		0.25rem
					text-align			right

				&__temperature
					col(6)
					font-size			2rem
					font-weight			100
					height				3rem
					line-height			3rem
					padding-left		0.25rem
					text-align			left

					&__symbol
						font-size		0.3em

@keyframes blink
	from
		opacity							1
	50%
		opacity							0
	to
		opacity							1

@keyframes scaleOut
	0% 
		transform						scale(0)
	100%
		opacity							0
		transform						scale(6.0)